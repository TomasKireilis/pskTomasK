<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="lt.vu.mybatis.model.Samurai" alias="Samurai"/>
        <typeAlias type="lt.vu.mybatis.model.SamuraiQuote" alias="SamuraiQuote"/>
        <typeAlias type="lt.vu.mybatis.model.Battle" alias="Battle"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="SamuraisDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml/BattleMapper.xml"/>
        <mapper resource="mybatis.xml/SamuraiMapper.xml"/>
        <mapper resource="mybatis.xml/SamuraiQuoteMapper.xml"/>
    </mappers>
</configuration>
